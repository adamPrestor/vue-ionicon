{
  "name": "vue-ionicon",
  "version": "1.1.1",
  "description": "Caching asynchronous IonIcons loader for Vue",
  "author": "Jure ErznoÅ¾nik",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "main": "ion-icon.vue",
  "files": [
    "ion-icon.vue"
  ],
  "keywords": [
    "vue ionicons",
    "vue svg",
    "ionicons"
  ],
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git@github.com:velis74/vue-ionicon.git"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "dompurify": "^2.3.4",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-plugin-eslint": "^4.5.15",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "^4.5.15",
    "@vue/test-utils": "^1.3.0",
    "cache-loader": "^4.1.0",
    "eslint-config-velis": ">=1.0.0",
    "flush-promises": "^1.0.2",
    "np": "^7.6.0",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0"
  },
  "vue": {
    "outputDir": "dist/",
    "css": {
      "extract": {
        "ignoreOrder": true,
        "filename": "css/vue-ionicon.css",
        "chunkFilename": "css/vue-ionicon-vendor.css"
      }
    },
    "configureWebpack": {
      "entry": {
        "app": "./index.js"
      },
      "resolve": {
        "extensions": [
          ".js",
          ".vue",
          ".json"
        ]
      },
      "devServer": {
        "proxy": {
          ".*": {
            "target": "http://localhost:8000",
            "secure": false
          }
        }
      },
      "output": {
        "filename": "js/vue-ionicon.js",
        "chunkFilename": "js/vue-ionicon-vendors.js"
      }
    }
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset"
    ]
  },
  "eslintConfig": {
    "extends": [
      "velis"
    ]
  },
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "testMatch": [
      "**/*.spec.[jt]s?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!index.*"
    ]
  }
}
